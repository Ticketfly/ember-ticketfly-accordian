{{#if hasBlock}}

  {{yield (hash
    tab=(
      component 'tf-accordion-panel-tab'
      class=tabClassName
      panel=this
      id=tabID
      panelBodyID=panelBodyID
      isPanelExpanded=isExpanded
    )

    body=(
      component 'tf-accordion-panel-body'
      class=bodyClassName
      panel=this
      tabID=tabID
      id=panelBodyID
      isPanelExpanded=isExpanded
    )
  )}}

{{else}}

  {{!-- Render defaults --}}
  {{tf-accordion-panel-tab
    class=tabClassName
    panel=this
    id=tabID
    panelBodyID=panelBodyID
    title=tabTitle
    isPanelExpanded=isExpanded
  }}

  {{tf-accordion-panel-body
    class=bodyClassName
    panel=this
    id=panelBodyID
    tabID=tabID
    content=bodyContent
    isPanelExpanded=isExpanded
  }}

{{/if}}
