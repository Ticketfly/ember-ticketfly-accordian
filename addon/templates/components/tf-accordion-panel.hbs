{{#if hasBlock}}

  {{yield (hash
    tab=(
      component 'tf-accordion-panel-tab'
      class=tabClassName
      panelExpandedClass=panelExpandedTabClass
      accordion=accordion
      panel=this
      id=tabID
      panelBodyID=panelBodyID
      isPanelExpanded=isExpanded
    )

    body=(
      component 'tf-accordion-panel-body'
      class=bodyClassName
      accordion=accordion
      panel=this
      id=panelBodyID
      tabID=tabID
      isPanelExpanded=isExpanded
    )
  )}}

{{else}}

  {{!-- Render defaults --}}
  {{tf-accordion-panel-tab
    class=tabClassName
    panelExpandedClass=panelExpandedTabClass
    accordion=accordion
    panel=this
    id=tabID
    panelBodyID=panelBodyID
    isPanelExpanded=isExpanded
    title=tabTitle
  }}

  {{tf-accordion-panel-body
    class=bodyClassName
    accordion=accordion
    panel=this
    id=panelBodyID
    tabID=tabID
    isPanelExpanded=isExpanded
    content=bodyContent
  }}

{{/if}}
