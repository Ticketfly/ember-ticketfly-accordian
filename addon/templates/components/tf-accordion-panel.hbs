{{#if hasBlock}}

  {{yield (hash
    toggleHeader=(
      component 'tf-accordion-panel-toggle'
      class=headerClassName
      panel=this
      id=tabID
      isPanelExpanded=isExpanded
    )

    body=(
      component 'tf-accordion-panel-body'
      class=bodyClassName
      panel=this
      tabID=tabID
      isPanelExpanded=isExpanded
    )
  )}}

{{else}}

  {{!-- Render defaults --}}
  {{tf-accordion-panel-toggle
    class=headerClassName 
    panel=this
    id=tabID 
    title=tabTitle
    isPanelExpanded=isExpanded
  }}
  
  {{tf-accordion-panel-body
    class=bodyClassName
    panel=this 
    tabID=tabID 
    content=panelContent
    isPanelExpanded=isExpanded
  }}

{{/if}}
