{{#if hasBlock}}

  {{yield (hash
    toggleHeader=(
      component 'tf-accordion-panel-toggle'
      class=headerClassName
      panel=this
      id=tabID
      panelBodyID=panelBodyID
      isPanelExpanded=isExpanded
    )

    body=(
      component 'tf-accordion-panel-body'
      class=bodyClassName
      panel=this
      tabID=tabID
      id=panelBodyID
      isPanelExpanded=isExpanded
    )
  )}}

{{else}}

  {{!-- Render defaults --}}
  {{tf-accordion-panel-toggle
    class=headerClassName
    panel=this
    id=tabID
    panelBodyID=panelBodyID
    title=tabTitle
    isPanelExpanded=isExpanded
  }}

  {{tf-accordion-panel-body
    class=bodyClassName
    panel=this
    id=panelBodyID
    tabID=tabID
    content=panelContent
    isPanelExpanded=isExpanded
  }}

{{/if}}
