{{#if hasBlock}}

  {{yield (hash
    toggleHeader=(
      component 'tf-accordion-panel-toggle'
      panel=this
      id=tabID
      isPanelExpanded=isExpanded
      on-click=(action 'togglePanel')
    )

    body=(
      component 'tf-accordion-panel-body'
      panel=this
      tabID=tabID
      isPanelExpanded=isExpanded
    )
  )}}

{{else}}

  {{!-- Render defaults --}}
  {{tf-accordion-panel-toggle 
    panel=this
    id=tabID 
    title=tabTitle
    isPanelExpanded=isExpanded
    on-click=(action 'togglePanel')
  }}
  
  {{tf-accordion-panel-body
    panel=this 
    tabID=tabID 
    content=panelContent
    isPanelExpanded=isExpanded
  }}

{{/if}}
