<section class="p-index u-fill-width u-fill-height u-overflow-hide u-overflow-auto-y">

  <section>
    <h1 class="o-content-box">Ember Ticketfly Accordion</h1>
  </section>


  <section class="u-width-80 u-m-auto u-mt4">
    <h2>Installation</h2>
    <pre>
      ember install ticketfly-ember-accordion
    </pre>

    <h2>Example Usage</h2>

    <section>
      <h4>Tabbed Details View</h4>

      {{#tf-accordion class="p-index__product-accordion c-accordion" as |accordion|}}
        
        {{accordion.panel 
          class="c-accordion__panel"
          headerClassName="c-accordion__panel-header" 
          bodyClassName="c-accordion__panel-body" 
          tabTitle=model.overview.title 
          panelContent=model.overview.content
        }}

        {{#accordion.panel class="c-accordion__panel" as |panel|}}
          {{panel.toggleHeader class="c-accordion__panel-header" title=model.media.title}}
          {{#panel.body class="c-accordion__panel-body"}}
            <h3>Trailers</h3>
            <h3>Screenshots</h3>
          {{/panel.body}}
        {{/accordion.panel}}

        {{accordion.panel 
          class="c-accordion__panel"
          headerClassName="c-accordion__panel-header" 
          bodyClassName="c-accordion__panel-body"  
          tabTitle=model.storyline.title 
          panelContent=model.storyline.content
        }}
        
        {{#accordion.panel class="c-accordion__panel" isExpanded=true as |panel|}}
          {{panel.toggleHeader class="c-accordion__panel-header" title=model.similarTitles.title}}
          {{#panel.body class="c-accordion__panel-body" tagName="ul"}}
            <li>Gears of War 4</li>
            <li>Assassin's Creed: Syndicate</li>
          {{/panel.body}}
        {{/accordion.panel}}

        {{accordion.panel 
          class="c-accordion__panel" 
          headerClassName="c-accordion__panel-header" 
          bodyClassName="c-accordion__panel-body" 
          tabTitle=model.production.title 
          panelContent=model.production.content
        }}

      {{/tf-accordion}}
    </section>


    <section>
      <h4>Navigaton Menu</h4>
      <nav>
        <ul>
          <li>About</li>

          {{#tf-accordion 
            class="p-index__nav-menu-accordion" 
            tagName="li" 
            multiExpand=true 
            as |accordion|
          }}
            {{#accordion.panel as |panel|}}
              {{panel.toggleHeader title="Media"}}

              {{#panel.body tagName="ul"}}
                <li>Videos</li>
                <li>Music</li>
                <li>Photos</li>
              {{/panel.body}}
            {{/accordion.panel}}
          {{/tf-accordion}}

        </ul>
      </nav>
    </section>

  </section>

</section>
